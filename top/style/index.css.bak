*
{
    font-family: 'Roboto Slab', serif;
}

body
{
    width: 100vw;
    height: 100vh;

    padding: 0;
    margin: 0;
}

.page_wrapper
{
    width: 100vw;
    height: 100vh;
 
    display: flex;
    flex-direction: column;

    background: url("../img/noise.jpg");
}

#top_navbar
{
    background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.9),
        rgba(220, 220, 220, 0.9)
    );
    backdrop-filter: blur(7px);

    border-bottom: 1px solid rgba(90, 90, 90, 0.3);

    z-index: 1;
}

#content_wrapper
{
    flex: 1;

    display: flex;
    flex-direction: row;
}

#side_navbar
{
    flex: 1;
    background: linear-gradient(
        180deg,
        rgba(220, 220, 220, 0.9),
        rgba(200, 200, 200, 0.9)
    );
    backdrop-filter: blur(7px);

    padding: 10px;
}

#sidebar-user-profile
{
    visibility: hidden;
}

@media only screen and (max-width: 992px)
{
    #sidebar-user-profile
    {
        visibility: visible;
    }
}

#main_content
{
    flex: 4;
    background: url("../img/bg-entrada.jpg");
    background-repeat: no-repeat;
    background-size: cover;
    color: white;
}

.blured_background
{
    width: 100%;
    height: 100%;
    background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.7),
        rgba(0, 0, 0, 0.25)
    );
    backdrop-filter: blur(2px);

    display: flex;
}

.dropdown-menu
{
    background: linear-gradient(
        180deg,
        rgba(255, 255, 255, 0.8),
        rgba(240, 240, 240, 0.8)
    );
    backdrop-filter: blur(3px);

    border-radius: 0;
}

.navbar_icon
{
    color: rgb(0, 0, 149);
}

.sidebar_icon
{
    color: rgb(0, 0, 149);
}

.nav-link
{
    color: black;
}

.content_container
{
    width: 100%;
    height: 100%;
}

.sidebar_icon
{
	width: 32px;
	padding: 10px;
}
